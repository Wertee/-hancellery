@model Order

<form method="post" asp-action="Checkout">
    <input type="hidden" asp-for="Id" value="0" />
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <input type="hidden" asp-for="OrderDate" value="@DateTime.Now" />
    <div>
        <label>Адрес</label>
        <input type="text" asp-for="Address" />
    </div>
    <div>
        <label>Телефон</label>
        <input type="text" asp-for="PhoneNumber" />
    </div>
    <div>
        <input type="hidden" asp-for="Total" value="@Model.Total" />
        <p>Общая стоимость покупки: @Model.Total</p>
    </div>
    <input type="submit" class="btn btn-primary" value="Оформить" />
</form>