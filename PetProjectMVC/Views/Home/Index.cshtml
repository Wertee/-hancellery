@using PetProjectMVC.EF
@model List<Game>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
@foreach (var item in Model)
{
      <div class="column">
      <div class="product-item">
                @{
                    if(item.Image != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(item.Image)" />
                    }else{
                        <img src="https://html5book.ru/wp-content/uploads/2015/10/black-dress.jpg">
                    }
                 }
          <div class="product-list">
            <h3>@item.Name</h3>
              <span class="price">₽ @item.Price</span>
              <a asp-action="EditGame" asp-route-id = "@item.Id" class="button">Изменить</a>
          </div>
      </div>
      </div>
}

</div>
