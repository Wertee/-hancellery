@model List<Game>

<div class="mb-3">
    <a class="btn btn-primary" asp-controller="Roles" asp-action="Index">Роли</a>
    <a class="btn btn-primary" asp-controller="Category" asp-action="Index">Категории</a>
    <a class="btn btn-primary" asp-action="AddGame">Добавить игру</a>
    <a class="btn btn-primary" asp-action="UserList">Список пользователей</a>
</div>
<div class="row">
@foreach (var item in Model)
{
      <div class="column">
      <div class="product-item">
                @{
                    if(item.Image != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(item.Image)" />
                    }else{
                        <img src="https://html5book.ru/wp-content/uploads/2015/10/black-dress.jpg">
                    }
                 }
          <div class="product-list">
            <h3>@item.Name</h3>
              <span class="price">₽ @item.Price</span>
              <a asp-action="EditGame" asp-route-id = "@item.Id" class="button">Изменить</a>
          </div>
      </div>
      </div>
}

</div>
