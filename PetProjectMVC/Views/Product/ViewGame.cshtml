@model Game

<div class="product-item">                
@{
    if (Model.Image != null)
    {
        <img src="data:image;base64,@Convert.ToBase64String(Model.Image)" />
    }
    else
    {
        <img src="https://html5book.ru/wp-content/uploads/2015/10/black-dress.jpg">
    }
}
</div>

<h1>@Model.Name</h1>
<h1>@Model.Description</h1>
@*<h1>@Model.Category</h1>*@
<h1>@Model.Price</h1>
