@model List<Category>

<a class="btn btn-primary" asp-action="AddCategory">Создать категорию</a>


@if(Model.Count == 0){
    <h3>Нет категорий</h3>
}else
{
    <table class="table">
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                <a class="btn btn-primary" asp-action="EditCategory" asp-route-categoryId="@category.Id">Изменить</a>        
            </td>
            <td>
                <a class="btn btn-primary" asp-action="RemoveCategory" asp-route-categoryId="@category.Id">Удалить</a> 
            </td>
        </tr>
    }
    </table>
}

